# Development Environment Configuration
# Copy this to .env.local và customize cho local development

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=machine_management_db
DB_USER=appuser
DB_PASSWORD=userpass123
DB_ROOT_PASSWORD=admin123

# Backend API Configuration
API_PORT=5000
API_ENVIRONMENT=Development
API_LOG_LEVEL=Information

# Manager Web App Configuration
MANAGER_PORT=5001
MANAGER_ENVIRONMENT=Development

# Redis Configuration
REDIS_PORT=6379
REDIS_PASSWORD=redispass123

# Tools Configuration (Adminer, Portainer)
ADMINER_PORT=8080
PORTAINER_PORT=9000

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Development Tools
HOT_RELOAD_ENABLED=true
DEBUG_MODE=true
SWAGGER_ENABLED=true

# Logging Configuration
LOG_LEVEL_ROOT=Information
LOG_LEVEL_MICROSOFT=Warning
LOG_LEVEL_SYSTEM=Warning

# SignalR Configuration
SIGNALR_ENABLE_DETAILED_ERRORS=true
SIGNALR_LOG_LEVEL=Information

# File Upload Configuration
MAX_FILE_SIZE_MB=10
UPLOAD_PATH=./uploads

# Performance Configuration
CONNECTION_POOL_SIZE=100
REQUEST_TIMEOUT_SECONDS=30
BULK_INSERT_BATCH_SIZE=1000

# Security (Development - không dùng trong production)
DISABLE_HTTPS_REDIRECT=true
ALLOW_ANONYMOUS_ACCESS=false
CORS_ALLOW_ALL_ORIGINS=false

# Feature Flags
FEATURE_REAL_TIME_NOTIFICATIONS=true
FEATURE_FILE_UPLOAD=true
FEATURE_ADVANCED_LOGGING=true
FEATURE_METRICS_COLLECTION=true