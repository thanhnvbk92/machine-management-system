<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    <PageTitle>Not Authorized</PageTitle>
                    <LayoutView Layout="@typeof(MainLayout)">
                        <MudAlert Severity="Severity.Warning">You are not authorized to access this page.</MudAlert>
                    </LayoutView>
                </NotAuthorized>
                <Authorizing>
                    <PageTitle>Loading...</PageTitle>
                    <LayoutView Layout="@typeof(MainLayout)">
                        <MudContainer Class="mt-16 text-center">
                            <MudProgressCircular Color="Color.Primary" Indeterminate="true" />
                            <MudText Typo="Typo.h6" Class="mt-4">Loading...</MudText>
                        </MudContainer>
                    </LayoutView>
                </Authorizing>
            </AuthorizeRouteView>
            <FocusOnNavigate RouteData="@routeData" Selector="h1" />
        </Found>
        <NotFound>
            <PageTitle>Not found</PageTitle>
            <LayoutView Layout="@typeof(MainLayout)">
                <MudContainer Class="mt-16 text-center">
                    <MudText Typo="Typo.h4" GutterBottom="true">Page not found</MudText>
                    <MudText Class="mb-8">Sorry, we couldn't find what you're looking for.</MudText>
                    <MudButton Variant="Variant.Filled" Color="Color.Primary" Href="/">Go Home</MudButton>
                </MudContainer>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>