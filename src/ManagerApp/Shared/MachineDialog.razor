@using MachineManagement.ManagerApp.Models
@using MachineManagement.ManagerApp.Services
@inject IMachineService MachineService
@inject ISnackbar Snackbar

<MudDialog>
    <DialogContent>
        <MudContainer>
            <MudGrid>
                <MudItem xs="12">
                    <MudTextField @bind-Value="machine.MachineId" 
                                  Label="Machine ID" 
                                  Variant="Variant.Outlined"
                                  Required="true"
                                  ReadOnly="@IsEdit" />
                </MudItem>
                <MudItem xs="12">
                    <MudTextField @bind-Value="machine.MachineName" 
                                  Label="Machine Name" 
                                  Variant="Variant.Outlined"
                                  Required="true" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudSelect @bind-Value="machine.MachineType" 
                               Label="Machine Type" 
                               Variant="Variant.Outlined"
                               Required="true">
                        <MudSelectItem Value="CNC">CNC Machine</MudSelectItem>
                        <MudSelectItem Value="Robot">Industrial Robot</MudSelectItem>
                        <MudSelectItem Value="Conveyor">Conveyor System</MudSelectItem>
                        <MudSelectItem Value="Press">Hydraulic Press</MudSelectItem>
                        <MudSelectItem Value="Welder">Welding Station</MudSelectItem>
                        <MudSelectItem Value="Other">Other</MudSelectItem>
                    </MudSelect>
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="machine.Location" 
                                  Label="Location" 
                                  Variant="Variant.Outlined"
                                  Required="true" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="machine.IpAddress" 
                                  Label="IP Address" 
                                  Variant="Variant.Outlined"
                                  Placeholder="192.168.1.100" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudNumericField @bind-Value="machine.Port" 
                                     Label="Port" 
                                     Variant="Variant.Outlined"
                                     Min="1" 
                                     Max="65535" />
                </MudItem>
                <MudItem xs="12">
                    <MudTextField @bind-Value="machine.Description" 
                                  Label="Description" 
                                  Variant="Variant.Outlined"
                                  Lines="3" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudSwitch @bind-Checked="machine.IsOnline" 
                               Label="Is Online" 
                               Color="Color.Success" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudSelect @bind-Value="machine.Status" 
                               Label="Status" 
                               Variant="Variant.Outlined">
                        <MudSelectItem Value="Running">Running</MudSelectItem>
                        <MudSelectItem Value="Stopped">Stopped</MudSelectItem>
                        <MudSelectItem Value="Paused">Paused</MudSelectItem>
                        <MudSelectItem Value="Error">Error</MudSelectItem>
                        <MudSelectItem Value="Maintenance">Maintenance</MudSelectItem>
                    </MudSelect>
                </MudItem>
            </MudGrid>
        </MudContainer>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel" Variant="Variant.Text">
            Cancel
        </MudButton>
        <MudButton Color="Color.Primary" 
                   Variant="Variant.Filled" 
                   OnClick="Submit"
                   Disabled="@isSubmitting">
            @if (isSubmitting)
            {
                <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true" />
                <MudText Class="ms-2">@(IsEdit ? "Updating..." : "Creating...")</MudText>
            }
            else
            {
                @(IsEdit ? "Update" : "Create")
            }
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = null!;
    [Parameter] public MachineDto? Machine { get; set; }
    
    private MachineDto machine = new();
    private bool isSubmitting = false;
    private bool IsEdit => Machine != null;

    protected override void OnInitialized()
    {
        if (Machine != null)
        {
            machine = new MachineDto
            {
                MachineId = Machine.MachineId,
                MachineName = Machine.MachineName,
                MachineType = Machine.MachineType,
                Location = Machine.Location,
                IpAddress = Machine.IpAddress,
                Port = Machine.Port,
                Description = Machine.Description,
                IsOnline = Machine.IsOnline,
                Status = Machine.Status
            };
        }
        else
        {
            machine = new MachineDto
            {
                MachineType = "CNC",
                Status = "Stopped",
                IsOnline = false,
                Port = 502 // Default Modbus TCP port
            };
        }
    }

    private async Task Submit()
    {
        if (string.IsNullOrWhiteSpace(machine.MachineId) || 
            string.IsNullOrWhiteSpace(machine.MachineName) ||
            string.IsNullOrWhiteSpace(machine.MachineType) ||
            string.IsNullOrWhiteSpace(machine.Location))
        {
            Snackbar.Add("Please fill in all required fields", Severity.Warning);
            return;
        }

        try
        {
            isSubmitting = true;
            
            if (IsEdit)
            {
                var request = new UpdateMachineRequest
                {
                    MachineName = machine.MachineName,
                    MachineType = machine.MachineType,
                    Location = machine.Location,
                    IpAddress = machine.IpAddress,
                    Port = machine.Port,
                    Description = machine.Description,
                    Status = machine.Status,
                    IsOnline = machine.IsOnline
                };
                
                var success = await MachineService.UpdateMachineAsync(machine.MachineId, request);
                if (success)
                {
                    MudDialog.Close(DialogResult.Ok(true));
                }
                else
                {
                    Snackbar.Add("Failed to update machine", Severity.Error);
                }
            }
            else
            {
                var request = new CreateMachineRequest
                {
                    MachineId = machine.MachineId,
                    MachineName = machine.MachineName,
                    MachineType = machine.MachineType,
                    Location = machine.Location,
                    IpAddress = machine.IpAddress,
                    Port = machine.Port,
                    Description = machine.Description,
                    Status = machine.Status
                };
                
                var result = await MachineService.CreateMachineAsync(request);
                if (result != null)
                {
                    MudDialog.Close(DialogResult.Ok(true));
                }
                else
                {
                    Snackbar.Add("Failed to create machine", Severity.Error);
                }
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error: {ex.Message}", Severity.Error);
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private void Cancel() => MudDialog.Cancel();
}