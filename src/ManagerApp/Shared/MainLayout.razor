@inherits LayoutComponentBase
@using MudBlazor
@inject NavigationManager Navigation

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer" />
        <MudSpacer />
        <MudText Typo="Typo.h6" Class="ml-3">Machine Management System</MudText>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.Notifications" Color="Color.Inherit" />
        <MudIconButton Icon="@Icons.Material.Filled.AccountCircle" Color="Color.Inherit" />
    </MudAppBar>
    
    <MudDrawer @bind-Open="@_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        <MudNavMenu>
            <MudText Typo="Typo.h6" Class="px-4 py-2">
                <MudIcon Icon="@Icons.Material.Filled.Engineering" Class="mr-3" />
                MMS Control
            </MudText>
            <MudDivider Class="mb-2" />
            
            <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Dashboard">
                Dashboard
            </MudNavLink>
            
            <MudNavGroup Text="Machine Management" Icon="@Icons.Material.Filled.Precision" Expanded="true">
                <MudNavLink Href="/machines" Icon="@Icons.Material.Filled.List">
                    All Machines
                </MudNavLink>
                <MudNavLink Href="/machines/online" Icon="@Icons.Material.Filled.CheckCircle">
                    Online Machines
                </MudNavLink>
                <MudNavLink Href="/machines/offline" Icon="@Icons.Material.Filled.Cancel">
                    Offline Machines
                </MudNavLink>
            </MudNavGroup>
            
            <MudNavGroup Text="Operations" Icon="@Icons.Material.Filled.PlayArrow">
                <MudNavLink Href="/commands" Icon="@Icons.Material.Filled.Terminal">
                    Command Center
                </MudNavLink>
                <MudNavLink Href="/jobs" Icon="@Icons.Material.Filled.Work">
                    Production Jobs
                </MudNavLink>
                <MudNavLink Href="/schedules" Icon="@Icons.Material.Filled.Schedule">
                    Schedules
                </MudNavLink>
            </MudNavGroup>
            
            <MudNavGroup Text="Monitoring" Icon="@Icons.Material.Filled.Monitoring">
                <MudNavLink Href="/logs" Icon="@Icons.Material.Filled.Description">
                    System Logs
                </MudNavLink>
                <MudNavLink Href="/alerts" Icon="@Icons.Material.Filled.Notifications">
                    Alerts & Alarms
                </MudNavLink>
                <MudNavLink Href="/analytics" Icon="@Icons.Material.Filled.Analytics">
                    Analytics
                </MudNavLink>
            </MudNavGroup>
            
            <MudDivider Class="my-2" />
            
            <MudNavGroup Text="Administration" Icon="@Icons.Material.Filled.AdminPanelSettings">
                <MudNavLink Href="/users" Icon="@Icons.Material.Filled.People">
                    User Management
                </MudNavLink>
                <MudNavLink Href="/settings" Icon="@Icons.Material.Filled.Settings">
                    System Settings
                </MudNavLink>
                <MudNavLink Href="/backup" Icon="@Icons.Material.Filled.Backup">
                    Backup & Restore
                </MudNavLink>
            </MudNavGroup>
            
            <MudDivider Class="my-2" />
            
            <MudNavLink Href="/help" Icon="@Icons.Material.Filled.Help">
                Help & Support
            </MudNavLink>
            <MudNavLink Href="/about" Icon="@Icons.Material.Filled.Info">
                About
            </MudNavLink>
        </MudNavMenu>
    </MudDrawer>
    
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.False" Class="pa-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private bool _drawerOpen = true;
    
    private void ToggleDrawer()
    {
        _drawerOpen = !_drawerOpen;
    }
}