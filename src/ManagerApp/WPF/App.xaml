<Application x:Class="MachineManagerApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MachineManagerApp"
             xmlns:models="clr-namespace:MachineManagerApp.Models">
    <Application.Resources>
        <ResourceDictionary>
            <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            
            <!-- Custom Styles -->
            <Style x:Key="StatusRunning" TargetType="TextBlock">
                <Setter Property="Foreground" Value="#4CAF50"/>
                <Setter Property="FontWeight" Value="Bold"/>
            </Style>
            
            <Style x:Key="StatusStopped" TargetType="TextBlock">
                <Setter Property="Foreground" Value="#F44336"/>
                <Setter Property="FontWeight" Value="Bold"/>
            </Style>
            
            <Style x:Key="StatusIdle" TargetType="TextBlock">
                <Setter Property="Foreground" Value="#FF9800"/>
                <Setter Property="FontWeight" Value="Bold"/>
            </Style>
            
            <Style x:Key="StatusError" TargetType="TextBlock">
                <Setter Property="Foreground" Value="#E91E63"/>
                <Setter Property="FontWeight" Value="Bold"/>
            </Style>
            
            <Style x:Key="StatusOffline" TargetType="TextBlock">
                <Setter Property="Foreground" Value="#9E9E9E"/>
                <Setter Property="FontWeight" Value="Bold"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>