{
  "ApiSettings": {
    "BaseUrl": "http://localhost:5275",
    "Timeout": 30,
    "RetryAttempts": 3,
    "HeartbeatInterval": 30
  },
  "MachineSettings": {
    "MachineId": "MACHINE_001",
    "StationId": "STATION_001",
    "LineId": "LINE_001",
    "ProcessId": "PROCESS_001",
    "ModelId": "MODEL_001",
    "ModelGroupId": "GROUP_001",
    "BuyerId": "BUYER_001"
  },
  "LogSettings": {
    "WatchDirectories": [
      "C:\\Logs\\Production",
      "C:\\Logs\\Quality",
      "C:\\Logs\\Maintenance"
    ],
    "FilePatterns": [
      "*.log",
      "*.txt",
      "*.csv"
    ],
    "BatchSize": 100,
    "BatchTimeout": 60,
    "MaxFileSize": 10485760
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.File", "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "System": "Warning",
        "Microsoft": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "Logs/yyyy/MM/client-yyyy-MM-dd.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      },
      {
        "Name": "Console",
        "Args": {
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ]
  }
}