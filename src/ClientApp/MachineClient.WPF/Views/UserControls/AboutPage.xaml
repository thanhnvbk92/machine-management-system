<UserControl x:Class="MachineClient.WPF.Views.UserControls.AboutPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    
    <Grid Margin="20">
        <materialDesign:Card Padding="40" HorizontalAlignment="Center" VerticalAlignment="Center" MaxWidth="500">
            <StackPanel HorizontalAlignment="Center">
                
                <!-- App Icon/Logo -->
                <materialDesign:PackIcon Kind="Factory" 
                                         Foreground="{DynamicResource PrimaryHueMidBrush}" 
                                         Width="80" Height="80" Margin="0,0,0,20"/>
                
                <!-- App Name -->
                <TextBlock Text="Machine Management Client" 
                           FontSize="28" FontWeight="Bold" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,8"/>
                
                <!-- Version -->
                <TextBlock Text="Version 1.0.0" 
                           FontSize="16" 
                           HorizontalAlignment="Center"
                           Foreground="{DynamicResource MaterialDesignBodyLight}"
                           Margin="0,0,0,20"/>
                
                <!-- Description -->
                <TextBlock Text="A comprehensive machine management and monitoring client application built with WPF and Material Design." 
                           FontSize="14" 
                           TextWrapping="Wrap"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           Margin="0,0,0,30"/>
                
                <!-- Company Info -->
                <StackPanel Margin="0,0,0,20" HorizontalAlignment="Center">
                    <TextBlock Text="Developed by" 
                               FontSize="12" 
                               HorizontalAlignment="Center"
                               Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                    <TextBlock Text="Machine Management System Team" 
                               FontSize="16" FontWeight="Medium"
                               HorizontalAlignment="Center"/>
                </StackPanel>
                
                <!-- Build Info -->
                <StackPanel Margin="0,0,0,10" HorizontalAlignment="Center">
                    <TextBlock Text="{Binding BuildDate, StringFormat='Build Date: {0:yyyy-MM-dd}'}" 
                               FontSize="12" 
                               HorizontalAlignment="Center"
                               Foreground="{DynamicResource MaterialDesignBodyLight}"
                               Margin="0,0,0,2"/>
                    <TextBlock Text=".NET 8.0 | WPF | Material Design" 
                               FontSize="12" 
                               HorizontalAlignment="Center"
                               Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                </StackPanel>
                
                <!-- Copyright -->
                <TextBlock Text="Â© 2025 Machine Management System. All rights reserved." 
                           FontSize="11" 
                           HorizontalAlignment="Center"
                           Foreground="{DynamicResource MaterialDesignBodyLight}"
                           Margin="0,20,0,0"/>
                
                <!-- System Info -->
                <materialDesign:Card Padding="16" Margin="0,30,0,0" Background="{DynamicResource MaterialDesignCardBackground}">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="System Information" 
                                   FontSize="14" FontWeight="Medium" 
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="{Binding OperatingSystem}" FontSize="12" HorizontalAlignment="Center" Margin="0,2"/>
                        <TextBlock Text="{Binding RuntimeVersion}" FontSize="12" HorizontalAlignment="Center" Margin="0,2"/>
                        <TextBlock Text="{Binding MachineName, StringFormat='Computer: {0}'}" FontSize="12" HorizontalAlignment="Center" Margin="0,2"/>
                    </StackPanel>
                </materialDesign:Card>
                
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</UserControl>