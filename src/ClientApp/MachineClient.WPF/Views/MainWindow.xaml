<Window x:Class="MachineClient.WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Machine Client - Log Collection &amp; Remote Control"
        Height="800" Width="1200"
        MinHeight="600" MinWidth="800"
        WindowStartupLocation="CenterScreen"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}">
    
    <materialDesign:DialogHost>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <materialDesign:ColorZone Grid.Row="0" Mode="PrimaryMid" Padding="16" 
                                      materialDesign:ElevationAssist.Elevation="Dp4">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Factory" Width="32" Height="32" 
                                               VerticalAlignment="Center" Margin="0,0,12,0"/>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Machine Client" FontSize="20" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding MachineId}" FontSize="14" Opacity="0.8"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                        <Ellipse Style="{StaticResource ConnectionStatusIndicator}"/>
                        <TextBlock Text="{Binding ConnectionStatus}" Style="{StaticResource StatusTextBlock}" 
                                 Foreground="White" Margin="0,0,16,0"/>
                        <TextBlock Text="{Binding LastHeartbeat, StringFormat='Last: {0:HH:mm:ss}'}" 
                                 FontSize="12" Opacity="0.8" Foreground="White"/>
                    </StackPanel>
                </Grid>
            </materialDesign:ColorZone>
            
            <!-- Main Content -->
            <Grid Grid.Row="1" Margin="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Control Buttons -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                    <Button Content="Start Services" Command="{Binding StartServicesCommand}" 
                            Style="{StaticResource PrimaryButton}"
                            IsEnabled="{Binding IsServiceRunning, Converter={x:Static materialDesign:NotConverter.Instance}}">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Play" Style="{StaticResource StatusIcon}"/>
                                    <TextBlock Text="Start Services" VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>
                    
                    <Button Content="Stop Services" Command="{Binding StopServicesCommand}" 
                            Style="{StaticResource SecondaryButton}"
                            IsEnabled="{Binding IsServiceRunning}">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Stop" Style="{StaticResource StatusIcon}"/>
                                    <TextBlock Text="Stop Services" VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>
                    
                    <Button Content="Test Connection" Command="{Binding TestConnectionCommand}" 
                            Style="{StaticResource SecondaryButton}">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Connection" Style="{StaticResource StatusIcon}"/>
                                    <TextBlock Text="Test API" VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>
                    
                    <Button Content="Clear Logs" Command="{Binding ClearLogsCommand}" 
                            Style="{StaticResource SecondaryButton}">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="BroomHorizontal" Style="{StaticResource StatusIcon}"/>
                                    <TextBlock Text="Clear" VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>
                </StackPanel>
                
                <!-- Statistics Cards -->
                <UniformGrid Grid.Row="1" Rows="1" Columns="4" Margin="0,0,0,16">
                    <materialDesign:Card Style="{StaticResource MetricCard}">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="Upload" Style="{StaticResource LargeIcon}" 
                                                   Foreground="{DynamicResource PrimaryHueMidBrush}" 
                                                   HorizontalAlignment="Center" Margin="0,0,0,8"/>
                            <TextBlock Text="{Binding TotalLogsSent}" Style="{StaticResource MetricTextBlock}"/>
                            <TextBlock Text="Logs Sent" Style="{StaticResource MetricLabelTextBlock}"/>
                        </StackPanel>
                    </materialDesign:Card>
                    
                    <materialDesign:Card Style="{StaticResource MetricCard}">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="Queue" Style="{StaticResource LargeIcon}" 
                                                   Foreground="{DynamicResource SecondaryHueMidBrush}" 
                                                   HorizontalAlignment="Center" Margin="0,0,0,8"/>
                            <TextBlock Text="{Binding LogsInQueue}" Style="{StaticResource MetricTextBlock}"/>
                            <TextBlock Text="In Queue" Style="{StaticResource MetricLabelTextBlock}"/>
                        </StackPanel>
                    </materialDesign:Card>
                    
                    <materialDesign:Card Style="{StaticResource MetricCard}">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="Timer" Style="{StaticResource LargeIcon}" 
                                                   Foreground="{DynamicResource PrimaryHueDarkBrush}" 
                                                   HorizontalAlignment="Center" Margin="0,0,0,8"/>
                            <TextBlock Text="{Binding LogCollectionInterval}s" Style="{StaticResource MetricTextBlock}"/>
                            <TextBlock Text="Collection Interval" Style="{StaticResource MetricLabelTextBlock}"/>
                        </StackPanel>
                    </materialDesign:Card>
                    
                    <materialDesign:Card Style="{StaticResource MetricCard}">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="HeartPulse" Style="{StaticResource LargeIcon}" 
                                                   Foreground="#4CAF50" 
                                                   HorizontalAlignment="Center" Margin="0,0,0,8"/>
                            <TextBlock Text="{Binding HeartbeatInterval}s" Style="{StaticResource MetricTextBlock}"/>
                            <TextBlock Text="Heartbeat Interval" Style="{StaticResource MetricLabelTextBlock}"/>
                        </StackPanel>
                    </materialDesign:Card>
                </UniformGrid>
                
                <!-- Main Content Tabs -->
                <TabControl Grid.Row="2" Style="{StaticResource MaterialDesignTabControl}">
                    <!-- Recent Logs Tab -->
                    <TabItem Header="Recent Logs">
                        <TabItem.HeaderTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="FileDocumentOutline" Style="{StaticResource StatusIcon}"/>
                                    <TextBlock Text="Recent Logs" VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </TabItem.HeaderTemplate>
                        
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <materialDesign:Card Grid.Row="0" Style="{StaticResource InfoCard}" Margin="0,0,0,8">
                                <TextBlock Text="Real-time log entries collected from the machine. Latest entries appear first." 
                                         FontSize="13" Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                            </materialDesign:Card>
                            
                            <DataGrid Grid.Row="1" ItemsSource="{Binding RecentLogs}" 
                                    Style="{StaticResource LogDataGrid}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Time" Binding="{Binding Timestamp, StringFormat=HH:mm:ss}" Width="80"/>
                                    <DataGridTextColumn Header="Level" Binding="{Binding Level}" Width="60">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Level}" Value="ERROR">
                                                        <Setter Property="Foreground" Value="#F44336"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Level}" Value="WARN">
                                                        <Setter Property="Foreground" Value="#FF9800"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Level}" Value="INFO">
                                                        <Setter Property="Foreground" Value="#2196F3"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Machine" Binding="{Binding MachineId}" Width="100"/>
                                    <DataGridTextColumn Header="Message" Binding="{Binding Message}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </TabItem>
                    
                    <!-- Configuration Tab -->
                    <TabItem Header="Configuration">
                        <TabItem.HeaderTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Settings" Style="{StaticResource StatusIcon}"/>
                                    <TextBlock Text="Configuration" VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </TabItem.HeaderTemplate>
                        
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel Margin="16">
                                <TextBlock Text="Machine Configuration" Style="{StaticResource HeaderTextBlock}"/>
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="16"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0">
                                        <TextBox Text="{Binding MachineId}" 
                                               materialDesign:HintAssist.Hint="Machine ID"
                                               Style="{StaticResource ConfigTextBox}"/>
                                        
                                        <TextBox Text="{Binding StationName}" 
                                               materialDesign:HintAssist.Hint="Station Name"
                                               Style="{StaticResource ConfigTextBox}"/>
                                        
                                        <TextBox Text="{Binding LineName}" 
                                               materialDesign:HintAssist.Hint="Line Name"
                                               Style="{StaticResource ConfigTextBox}"/>
                                        
                                        <TextBox Text="{Binding ApiUrl}" 
                                               materialDesign:HintAssist.Hint="API Server URL"
                                               Style="{StaticResource ConfigTextBox}"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="2">
                                        <materialDesign:NumericUpDown Value="{Binding LogCollectionInterval}" 
                                                                      Minimum="10" Maximum="300"
                                                                      materialDesign:HintAssist.Hint="Log Collection Interval (seconds)"
                                                                      Style="{StaticResource ConfigNumericUpDown}"/>
                                        
                                        <materialDesign:NumericUpDown Value="{Binding HeartbeatInterval}" 
                                                                      Minimum="30" Maximum="600"
                                                                      materialDesign:HintAssist.Hint="Heartbeat Interval (seconds)"
                                                                      Style="{StaticResource ConfigNumericUpDown}"/>
                                        
                                        <CheckBox Content="Auto-start services on startup" 
                                                IsChecked="{Binding AutoStart}" 
                                                Margin="0,16,0,8"/>
                                        
                                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                            <TextBox Text="{Binding LogFolderPath}" 
                                                   materialDesign:HintAssist.Hint="Log Folder Path"
                                                   Style="{StaticResource ConfigTextBox}" 
                                                   Width="300"/>
                                            <Button Content="Browse" Command="{Binding OpenLogFolderCommand}" 
                                                  Style="{StaticResource SecondaryButton}" 
                                                  Margin="8,4,0,4"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                                
                                <StackPanel Orientation="Horizontal" Margin="0,24,0,0">
                                    <Button Content="Save Configuration" Command="{Binding SaveConfigurationCommand}" 
                                          Style="{StaticResource PrimaryButton}"/>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>
                </TabControl>
            </Grid>
            
            <!-- Status Bar -->
            <materialDesign:ColorZone Grid.Row="2" Mode="PrimaryDark" Padding="16,8" 
                                      materialDesign:ElevationAssist.Elevation="Dp2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="{Binding LastError}" 
                             Foreground="#FFCDD2" FontSize="12" VerticalAlignment="Center"
                             Visibility="{Binding LastError, Converter={x:Static materialDesign:NullableToVisibilityConverter.Instance}}"/>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <ProgressBar IsIndeterminate="{Binding IsServiceRunning}" 
                                   Width="100" Height="2" 
                                   Visibility="{Binding IsServiceRunning, Converter={x:Static materialDesign:BooleanToVisibilityConverter.Instance}}"
                                   Margin="0,0,16,0"/>
                        <TextBlock Text="{Binding LastHeartbeat, StringFormat='Last heartbeat: {0:HH:mm:ss}'}" 
                                 FontSize="11" Opacity="0.8" Foreground="White" VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </materialDesign:ColorZone>
        </Grid>
    </materialDesign:DialogHost>
</Window>