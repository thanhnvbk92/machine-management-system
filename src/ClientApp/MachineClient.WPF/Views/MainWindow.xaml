<Window x:Class="MachineClient.WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:userControls="clr-namespace:MachineClient.WPF.Views.UserControls"
        Title="Machine Management Client" 
        Height="620" Width="900"
        MinHeight="550" MinWidth="800"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <!-- Sidebar - more compact -->
            <ColumnDefinition Width="180"/>
            <!-- Main Content -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" 
                Background="{DynamicResource MaterialDesignCardBackground}"
                BorderThickness="0,0,1,0"
                BorderBrush="{DynamicResource MaterialDesignDivider}">
            
                <Grid>
                <Grid.RowDefinitions>
                    <!-- Theme Toggle -->
                    <RowDefinition Height="Auto"/>
                    <!-- Navigation Menu -->
                    <RowDefinition Height="Auto"/>
                    <!-- Spacer -->
                    <RowDefinition Height="*"/>
                    <!-- Update Button -->
                    <RowDefinition Height="Auto"/>
                    <!-- Connection Info -->
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>                <!-- App Header with Theme Toggle -->
                <materialDesign:Card Grid.Row="0" Style="{StaticResource MinimalistCard}" Margin="8,8,8,4">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- App Title -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                            <materialDesign:PackIcon Kind="Factory" 
                                                     Foreground="{DynamicResource PrimaryHueMidBrush}" 
                                                     Width="20" Height="20" 
                                                     VerticalAlignment="Center"
                                                     Margin="0,0,8,0"/>
                            <StackPanel>
                                <TextBlock Text="Machine Client" FontWeight="Bold" FontSize="16"/>
                                <TextBlock Text="v1.0.0" FontSize="9" Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- Theme Switch -->
                        <Border Grid.Row="1" CornerRadius="12" 
                                Background="{DynamicResource MaterialDesignDivider}"
                                Height="24">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Light Mode Button -->
                                <Button Grid.Column="0" x:Name="LightModeButton"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Height="24"
                                        Click="LightModeButton_Click">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBodyLight}"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border x:Name="border" 
                                                                Background="{TemplateBinding Background}"
                                                                CornerRadius="12,0,0,12"
                                                                Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center"
                                                                              VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsChecked, ElementName=DarkModeToggle}" Value="False">
                                                    <Setter Property="Background" Value="{DynamicResource MaterialDesignPaper}"/>
                                                    <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidBrush}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                    <materialDesign:PackIcon Kind="WhiteBalanceSunny" Width="14" Height="14"/>
                                </Button>
                                
                                <!-- Dark Mode Button -->
                                <Button Grid.Column="1" x:Name="DarkModeButton"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Height="24"
                                        Click="DarkModeButton_Click">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBodyLight}"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border x:Name="border" 
                                                                Background="{TemplateBinding Background}"
                                                                CornerRadius="0,12,12,0"
                                                                Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center"
                                                                              VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsChecked, ElementName=DarkModeToggle}" Value="True">
                                                    <Setter Property="Background" Value="{DynamicResource MaterialDesignPaper}"/>
                                                    <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidBrush}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                    <materialDesign:PackIcon Kind="MoonWaxingCrescent" Width="14" Height="14"/>
                                </Button>
                                
                                <!-- Hidden toggle for state management -->
                                <ToggleButton x:Name="DarkModeToggle" 
                                              Visibility="Hidden"
                                              Checked="DarkModeToggle_Checked"
                                              Unchecked="DarkModeToggle_Unchecked"/>
                            </Grid>
                        </Border>
                    </Grid>
                </materialDesign:Card>

                <!-- Navigation Menu -->
                <materialDesign:Card Grid.Row="1" Style="{StaticResource MinimalistCard}" Margin="8,0,8,4">
                    <StackPanel>
                        <!-- Home -->
                        <Button Command="{Binding NavigateToHomeCommand}"
                                Margin="0,0,0,3"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Left"
                                Padding="10,8"
                                BorderThickness="0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Grid>
                                                    <!-- Left Indicator -->
                                                    <Rectangle x:Name="LeftIndicator" 
                                                               Width="4" 
                                                               Height="32"
                                                               HorizontalAlignment="Left"
                                                               VerticalAlignment="Center"
                                                               Fill="{DynamicResource PrimaryHueMidBrush}"
                                                               RadiusX="2" RadiusY="2"
                                                               Visibility="Collapsed"/>
                                                    
                                                    <Border x:Name="border" 
                                                            Background="{TemplateBinding Background}"
                                                            CornerRadius="8"
                                                            Padding="{TemplateBinding Padding}"
                                                            Margin="6,0,0,0">
                                                        <Border.Effect>
                                                            <DropShadowEffect x:Name="shadow" 
                                                                              ShadowDepth="0" 
                                                                              BlurRadius="0" 
                                                                              Opacity="0"/>
                                                        </Border.Effect>
                                                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                                    </Border>
                                                </Grid>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="border" Property="Background">
                                                            <Setter.Value>
                                                                <SolidColorBrush Color="#E0E0E0" Opacity="0.3"/>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsHomePage}" Value="True">
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                        <GradientStop Color="#E3F2FD" Offset="0"/>
                                                        <GradientStop Color="#BBDEFB" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Setter.Value>
                                            </Setter>
                                            <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidBrush}"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Grid>
                                                            <!-- Left Indicator - Visible when selected -->
                                                            <Rectangle Width="3" 
                                                                       Height="28"
                                                                       HorizontalAlignment="Left"
                                                                       VerticalAlignment="Center"
                                                                       Fill="{DynamicResource PrimaryHueMidBrush}"
                                                                       RadiusX="1.5" RadiusY="1.5"/>
                                                            
                                                            <Border Background="{TemplateBinding Background}"
                                                                    CornerRadius="0,6,6,0"
                                                                    Padding="{TemplateBinding Padding}"
                                                                    Margin="4,0,0,0"
                                                                    BorderThickness="0,0,0,0">
                                                                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                                            </Border>
                                                        </Grid>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Home" VerticalAlignment="Center" Margin="0,0,8,0" Width="18" Height="18"/>
                                <TextBlock Text="Home" VerticalAlignment="Center" FontSize="13" FontWeight="Medium"/>
                            </StackPanel>
                        </Button>

                        <!-- Settings -->
                        <Button Command="{Binding NavigateToSettingsCommand}"
                                Margin="0,0,0,3"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Left"
                                Padding="10,8"
                                BorderThickness="0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Grid>
                                                    <Border x:Name="border" 
                                                            Background="{TemplateBinding Background}"
                                                            CornerRadius="8"
                                                            Padding="{TemplateBinding Padding}"
                                                            Margin="6,0,0,0">
                                                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                                    </Border>
                                                </Grid>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="border" Property="Background">
                                                            <Setter.Value>
                                                                <SolidColorBrush Color="#E0E0E0" Opacity="0.3"/>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsSettingsPage}" Value="True">
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                        <GradientStop Color="#E3F2FD" Offset="0"/>
                                                        <GradientStop Color="#BBDEFB" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Setter.Value>
                                            </Setter>
                                            <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidBrush}"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Grid>
                                                            <!-- Left Indicator - Visible when selected -->
                                                            <Rectangle Width="3" 
                                                                       Height="28"
                                                                       HorizontalAlignment="Left"
                                                                       VerticalAlignment="Center"
                                                                       Fill="{DynamicResource PrimaryHueMidBrush}"
                                                                       RadiusX="1.5" RadiusY="1.5"/>
                                                            
                                                            <Border Background="{TemplateBinding Background}"
                                                                    CornerRadius="0,6,6,0"
                                                                    Padding="{TemplateBinding Padding}"
                                                                    Margin="4,0,0,0"
                                                                    BorderThickness="0,0,0,0">
                                                                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                                            </Border>
                                                        </Grid>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Settings" VerticalAlignment="Center" Margin="0,0,8,0" Width="18" Height="18"/>
                                <TextBlock Text="Settings" VerticalAlignment="Center" FontSize="13" FontWeight="Medium"/>
                            </StackPanel>
                        </Button>

                        <!-- About -->
                        <Button Command="{Binding NavigateToAboutCommand}"
                                Margin="0,0,0,0"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Left"
                                Padding="10,8"
                                BorderThickness="0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Grid>
                                                    <Border x:Name="border" 
                                                            Background="{TemplateBinding Background}"
                                                            CornerRadius="8"
                                                            Padding="{TemplateBinding Padding}"
                                                            Margin="6,0,0,0">
                                                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                                    </Border>
                                                </Grid>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="border" Property="Background">
                                                            <Setter.Value>
                                                                <SolidColorBrush Color="#E0E0E0" Opacity="0.3"/>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsAboutPage}" Value="True">
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                        <GradientStop Color="#E3F2FD" Offset="0"/>
                                                        <GradientStop Color="#BBDEFB" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Setter.Value>
                                            </Setter>
                                            <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidBrush}"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Grid>
                                                            <!-- Left Indicator - Visible when selected -->
                                                            <Rectangle Width="3" 
                                                                       Height="28"
                                                                       HorizontalAlignment="Left"
                                                                       VerticalAlignment="Center"
                                                                       Fill="{DynamicResource PrimaryHueMidBrush}"
                                                                       RadiusX="1.5" RadiusY="1.5"/>
                                                            
                                                            <Border Background="{TemplateBinding Background}"
                                                                    CornerRadius="0,6,6,0"
                                                                    Padding="{TemplateBinding Padding}"
                                                                    Margin="4,0,0,0"
                                                                    BorderThickness="0,0,0,0">
                                                                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                                            </Border>
                                                        </Grid>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Information" VerticalAlignment="Center" Margin="0,0,8,0" Width="18" Height="18"/>
                                <TextBlock Text="About" VerticalAlignment="Center" FontSize="13" FontWeight="Medium"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Update Button -->
                <Button Grid.Row="3" 
                        Content="Check Update"
                        Command="{Binding CheckUpdateCommand}"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Height="28"
                        FontSize="10"
                        Margin="8,4,8,4"/>

                <!-- Connection Info -->
                <materialDesign:Card Grid.Row="4" Style="{StaticResource MinimalistCard}" Margin="8,0,8,8">
                    <StackPanel>
                        <TextBlock Text="Connection" FontSize="12" FontWeight="Medium" 
                                   Foreground="{DynamicResource MaterialDesignBody}" 
                                   Margin="0,0,0,8"/>
                        
                        <!-- Connection Status -->
                        <Grid Margin="0,0,0,6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Ellipse Grid.Column="0" 
                                     Width="8" Height="8"
                                     VerticalAlignment="Center" 
                                     Margin="0,0,8,0">
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Setter Property="Fill" Value="#F44336"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                                <Setter Property="Fill" Value="#4CAF50"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>
                            <TextBlock Grid.Column="1" 
                                       Text="{Binding Status}" 
                                       FontSize="11" 
                                       VerticalAlignment="Center"
                                       FontWeight="Medium"/>
                            <TextBlock Grid.Column="2" 
                                       Text="API" 
                                       FontSize="9" 
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                        </Grid>
                        
                        <!-- IP Address -->
                        <Grid Margin="0,0,0,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <materialDesign:PackIcon Kind="IpNetwork" Grid.Column="0" 
                                                     Width="12" Height="12" 
                                                     Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                     VerticalAlignment="Center" 
                                                     Margin="0,0,8,0"/>
                            <TextBlock Grid.Column="1" 
                                       Text="{Binding IpAddress}" 
                                       FontSize="10" 
                                       VerticalAlignment="Center"/>
                        </Grid>
                        
                        <!-- MAC Address -->
                        <Grid Margin="0,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <materialDesign:PackIcon Kind="Ethernet" Grid.Column="0" 
                                                     Width="12" Height="12" 
                                                     Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                     VerticalAlignment="Center" 
                                                     Margin="0,0,8,0"/>
                            <TextBlock Grid.Column="1" 
                                       Text="{Binding MacAddress}" 
                                       FontSize="10" 
                                       VerticalAlignment="Center"/>
                        </Grid>
                    </StackPanel>
                </materialDesign:Card>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Column="1">
            
            <!-- Content Pages -->
            <userControls:HomePage Visibility="{Binding IsHomePage, Converter={StaticResource BooleanToVisibilityConverter}}"
                                   DataContext="{Binding}"/>
            
            <userControls:SettingsPage Visibility="{Binding IsSettingsPage, Converter={StaticResource BooleanToVisibilityConverter}}"
                                       DataContext="{Binding}"/>
            
            <userControls:AboutPage Visibility="{Binding IsAboutPage, Converter={StaticResource BooleanToVisibilityConverter}}"
                                    DataContext="{Binding}"/>
            
        </Grid>
        
    </Grid>
</Window>
