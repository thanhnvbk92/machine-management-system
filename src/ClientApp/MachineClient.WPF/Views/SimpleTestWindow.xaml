<Window x:Class="MachineClient.WPF.Views.SimpleTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Simple Test" 
        Height="400" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="White">
    
    <Grid Margin="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Machine Management Client - Test Window" 
                       FontSize="18" FontWeight="Bold"
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>
            
            <Border BorderBrush="Gray" BorderThickness="1" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Basic WPF Test (No Material Design)" FontSize="14" Margin="0,0,0,10"/>
                    <Button Content="Test Button" Padding="16,8" Margin="0,0,0,10"/>
                    <TextBox Text="Test Input" Margin="0,0,0,10"/>
                    <CheckBox Content="Test Checkbox"/>
                </StackPanel>
            </Border>
            
            <Button Content="Close" Click="CloseButton_Click" Padding="20,10"/>
        </StackPanel>
    </Grid>
</Window>