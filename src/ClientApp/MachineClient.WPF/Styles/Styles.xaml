<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <!-- Status Card Style -->
    <Style x:Key="StatusCard" TargetType="materialDesign:Card">
        <Setter Property="Margin" Value="8"/>
        <Setter Property="Padding" Value="16"/>
        <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp2"/>
        <Setter Property="Background" Value="{DynamicResource MaterialDesignPaper}"/>
    </Style>

    <!-- Header Text Block Style -->
    <Style x:Key="HeaderTextBlock" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
        <Setter Property="Margin" Value="0,0,0,12"/>
    </Style>

    <!-- Info Text Block Style -->
    <Style x:Key="InfoTextBlock" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBodyLight}"/>
        <Setter Property="Margin" Value="0,2"/>
    </Style>

    <!-- Value Text Block Style -->
    <Style x:Key="ValueTextBlock" TargetType="TextBlock">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidBrush}"/>
    </Style>

    <!-- Data Grid Style -->
    <Style TargetType="DataGrid">
        <Setter Property="GridLinesVisibility" Value="Horizontal"/>
        <Setter Property="HorizontalGridLinesBrush" Value="{DynamicResource MaterialDesignDivider}"/>
        <Setter Property="AlternatingRowBackground" Value="{DynamicResource MaterialDesignSelection}"/>
        <Setter Property="RowBackground" Value="Transparent"/>
        <Setter Property="Background" Value="{DynamicResource MaterialDesignPaper}"/>
        <Setter Property="HeadersVisibility" Value="Column"/>
        <Setter Property="SelectionMode" Value="Single"/>
        <Setter Property="SelectionUnit" Value="FullRow"/>
        <Setter Property="CanUserReorderColumns" Value="True"/>
        <Setter Property="CanUserResizeColumns" Value="True"/>
        <Setter Property="CanUserSortColumns" Value="True"/>
        <Setter Property="AutoGenerateColumns" Value="False"/>
        <Setter Property="IsReadOnly" Value="True"/>
    </Style>

    <!-- Tab Control Style -->
    <Style TargetType="TabControl" BasedOn="{StaticResource MaterialDesignTabControl}">
        <Setter Property="materialDesign:NavigationRailAssist.ShowSelectionBackground" Value="True"/>
        <Setter Property="materialDesign:ColorZoneAssist.Mode" Value="PrimaryMid"/>
    </Style>

    <!-- Button Styles -->
    <Style x:Key="ActionButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
        <Setter Property="Margin" Value="4"/>
        <Setter Property="MinWidth" Value="120"/>
        <Setter Property="Height" Value="36"/>
    </Style>

    <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
        <Setter Property="Margin" Value="4"/>
        <Setter Property="MinWidth" Value="100"/>
        <Setter Property="Height" Value="36"/>
    </Style>

    <!-- Text Box Styles -->
    <Style x:Key="SettingsTextBox" TargetType="TextBox" BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
        <Setter Property="Margin" Value="0,8"/>
        <Setter Property="materialDesign:HintAssist.IsFloating" Value="True"/>
        <Setter Property="materialDesign:TextFieldAssist.HasClearButton" Value="True"/>
    </Style>

    <!-- Group Box Style -->
    <Style TargetType="GroupBox" BasedOn="{StaticResource MaterialDesignGroupBox}">
        <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp1"/>
        <Setter Property="Margin" Value="0,0,0,16"/>
        <Setter Property="Padding" Value="16"/>
    </Style>

    <!-- Status Indicator Styles -->
    <Style x:Key="StatusIndicator" TargetType="Ellipse">
        <Setter Property="Width" Value="12"/>
        <Setter Property="Height" Value="12"/>
        <Setter Property="Fill" Value="Red"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding IsConnected}" Value="True">
                <Setter Property="Fill" Value="LightGreen"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <!-- Progress Bar Style -->
    <Style TargetType="ProgressBar" BasedOn="{StaticResource MaterialDesignLinearProgressBar}">
        <Setter Property="Height" Value="4"/>
        <Setter Property="Margin" Value="0,8"/>
        <Setter Property="materialDesign:TransitionAssist.DisableTransitions" Value="False"/>
    </Style>

    <!-- Slider Style -->
    <Style TargetType="Slider" BasedOn="{StaticResource MaterialDesignSlider}">
        <Setter Property="materialDesign:SliderAssist.OnlyShowFocusVisualWhileDragging" Value="True"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- CheckBox Style -->
    <Style TargetType="CheckBox" BasedOn="{StaticResource MaterialDesignCheckBox}">
        <Setter Property="Margin" Value="0,8"/>
        <Setter Property="materialDesign:CheckBoxAssist.CheckBoxSize" Value="20"/>
    </Style>

    <!-- List Box Style -->
    <Style TargetType="ListBox" BasedOn="{StaticResource MaterialDesignListBox}">
        <Setter Property="materialDesign:ListBoxAssist.IsToggle" Value="False"/>
        <Setter Property="Background" Value="Transparent"/>
    </Style>

    <!-- Expander Style -->
    <Style TargetType="Expander" BasedOn="{StaticResource MaterialDesignExpander}">
        <Setter Property="materialDesign:ExpanderAssist.HorizontalHeaderPadding" Value="16,0"/>
        <Setter Property="materialDesign:ExpanderAssist.VerticalHeaderPadding" Value="0,8"/>
    </Style>

    <!-- Menu Style -->
    <Style TargetType="Menu" BasedOn="{StaticResource MaterialDesignMenu}">
        <Setter Property="Background" Value="{DynamicResource MaterialDesignPaper}"/>
        <Setter Property="materialDesign:MenuAssist.TopLevelMenuItemHeight" Value="48"/>
    </Style>

    <!-- Tooltip Style -->
    <Style TargetType="ToolTip" BasedOn="{StaticResource MaterialDesignToolTip}">
        <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp2"/>
        <Setter Property="Padding" Value="12,8"/>
    </Style>

    <!-- Scroll Viewer Style -->
    <Style TargetType="ScrollViewer">
        <Setter Property="materialDesign:ScrollViewerAssist.IsAutoHideEnabled" Value="True"/>
        <Setter Property="Focusable" Value="False"/>
    </Style>

    <!-- Application-specific Colors -->
    <SolidColorBrush x:Key="SuccessColor" Color="#4CAF50"/>
    <SolidColorBrush x:Key="WarningColor" Color="#FF9800"/>
    <SolidColorBrush x:Key="ErrorColor" Color="#F44336"/>
    <SolidColorBrush x:Key="InfoColor" Color="#2196F3"/>
    
    <!-- Status Colors -->
    <SolidColorBrush x:Key="OnlineStatusColor" Color="#4CAF50"/>
    <SolidColorBrush x:Key="OfflineStatusColor" Color="#F44336"/>
    <SolidColorBrush x:Key="IdleStatusColor" Color="#FF9800"/>
    
    <!-- Chart Colors -->
    <SolidColorBrush x:Key="ChartPrimaryColor" Color="#2196F3"/>
    <SolidColorBrush x:Key="ChartSecondaryColor" Color="#FF9800"/>
    <SolidColorBrush x:Key="ChartAccentColor" Color="#4CAF50"/>

</ResourceDictionary>